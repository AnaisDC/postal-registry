{
  "ConnectionStrings": {
    "Events": "Server=(localdb)\\mssqllocaldb;Database=EFProviders.InMemory.PostalRegistry;Trusted_Connection=True;"
  },

  "Idempotency": {
    "ConnectionString": "Server=(localdb)\\mssqllocaldb;Database=EFProviders.InMemory.PostalRegistry;Trusted_Connection=True;"
  },

  "DataDog": {
    "Enabled": false,
    "Debug": false,
    "ServiceName": "postal-registry-crab-import-api"
  },

  "Cors": [
    "http://localhost:3000",
    "http://localhost:5000"
  ],

  "Logging": {
    "IncludeScopes": false,
    "LogLevel": {
      "Default": "Warning",
      "PostalRegistry": "Debug",
      "Aiv": "Debug",
      "Be.Vlaanderen.Basisregisters.DataDog.Tracing": "Information",
      "System": "Warning",
      "Microsoft": "Warning"
    }
  },

  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "PostalRegistry": "Verbose",
        "Aiv": "Verbose",
        "Be.Vlaanderen.Basisregisters.DataDog.Tracing": "Information",
        "Microsoft": "Warning",
        "System": "Warning",
        "Be.Vlaanderen.Basisregisters.AspNetCore.Mvc.Logging": "Error"
      }
    },
    "Properties": {
      "Application": "PostalRegistry - CrabImport API"
    }
  }
}
